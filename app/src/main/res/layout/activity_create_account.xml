<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FF"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.login.CreateAccountActivity">

    <TextView
        android:id="@+id/titleCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="632dp"
        android:gravity="left"
        android:rotationX="0"
        android:text="@string/title_profil"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <ScrollView
        android:id="@+id/profilScrol"
        android:layout_width="540dp"
        android:layout_height="540dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612">

        <LinearLayout
            android:id="@+id/profilInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rotation="0">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/title_fullName" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etablisseInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_etablissement" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/progDetudeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/title_etude" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nivDetudeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_niveau_etude" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/plsChoix"
                android:layout_width="381dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:text="@string/title_mutical_choix"
                android:textColor="#040404"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/quesInterest"
                android:layout_width="381dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:text="@string/title_interet"
                android:textColor="#040404"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/interetInput"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/input_interet" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/likeInfo"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/button_likeInfo"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp" />

                <Button
                    android:id="@+id/likeMath"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_likeMath"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/quesClass"
                android:layout_width="381dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:text="@string/title_cours"
                android:textColor="#040404"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputClass"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/input_class" />
            </com.google.android.material.textfield.TextInputLayout>




            <Button
                android:id="@+id/classIFT2905"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/button_IFT2905"
                android:textSize="12sp"
                android:layout_marginStart="15dp" />

            <Button
                android:id="@+id/classIFT2015"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_IFT2015"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/quesClub"
                android:layout_width="381dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:text="@string/title_clubs"
                android:textColor="#040404"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputClub"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/input_club" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clubDesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/button_design"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp" />

                <Button
                    android:id="@+id/clubCoding"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_coding"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="50dp">

    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_back"
        android:layout_alignParentLeft="true"
        app:layout_constraintEnd_toStartOf="@+id/goNext" />

    <Button
        android:id="@+id/goNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_next"
        android:layout_alignParentRight="true"
        app:layout_constraintStart_toEndOf="@+id/goBack" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



